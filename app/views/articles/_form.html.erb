<style>
  .colorTop{
    background-color: #000;
  }
  label{
    width: 100%;
  }
</style>

<div class="container">
  <div class="row justify-content-center">
    <div  class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 colorTop rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, "Título", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Título do artigo" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, "Descrição", class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Descrição do artigo" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category,"Categorias", class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Faça sua seleção na lista abaixo (pode estar vazia)"}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Criar artigo", class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancelar e retornar à lista de artigos ]', articles_path, class: "text-info" %>
    </div>
  </div>
</div>