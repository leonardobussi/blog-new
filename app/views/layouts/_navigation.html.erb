<style>
  .perfil{
    color: #991;
  }
</style>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Blog do bussi", root_path, class: "navbar-brand", id: "logo" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Bloggers", users_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Artigos
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <% if logged_in? %>
            <%= link_to "Criar um novo artigo", new_article_path, class: "dropdown-item" %>
          <% end %>  
          <%= link_to "Visualizar todos os artigos", articles_path, class: "dropdown-item" %> 
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Categorias
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Criar uma nova categoria", new_category_path, class: "dropdown-item" %>
           
          <%= link_to "Visualizar todas as categorias", categories_path, class: "dropdown-item" %>
        </div>
      </li>
      <% if logged_in? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= "(Admin)" if current_user.admin? %> <i class="perfil"><%= current_user.username %></i>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "Visualizar perfil", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Editar o perfil", edit_user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Deletar o perfil", user_path(current_user), class: "dropdown-item text-danger", method: :delete, data: { confirm: "Are you sure?" } %> 
            <%= link_to 'Deslogar', logout_path, class: "dropdown-item text-danger", method: :delete %>
            </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Logar', login_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Registrar', signup_path, class: "nav-link" %>
        </li>
      <% end %>
      </ul>
  </div>
</nav>
